@* @model UserViewModel *@

@{
    ViewData["Title"] = "Home Page";
    var UserViewModel = "Admin";
}

<!-- admin nav bar -->
<partial name="_AdminNavBarPartial" model="@UserViewModel" />

<div class="d-flex flex-column" style="width:100%; height:100%;">

    <div class="p-2 bg-light text-center">
        <h2 class="display-4">Hello, Admin!</h2>
        <p class="lead mt-1">
            You can also see <b>all users and services</b> and <b>all employees</b> in the
            system.
        </p>
    </div>

    <div class="container d-flex align-items-center justify-content-center " style="width:50%; height:100%;">
        <div class="d-flex flex-row gap-3" style="width:100%; height:50%;">

            <!-- Your content goes here -->
            <div class="d-flex gap-3 row text-center flex-fill m-2">
                <a asp-controller="Home" asp-action="RegisterEmployee" class="bg-light eployee-menu-element col pt-4" style="text-decoration:none">
                    <p>
                        Register Employee
                    </p>
                </a>
            </div>

            <div class="d-flex gap-3 row text-center flex-fill m-2">
                <a asp-controller="Home" asp-action="ViewAllEmployees" class="bg-light eployee-menu-element col pt-4" style="text-decoration:none">
                    <p>
                        Manage Employees
                    </p>
                </a>
            </div>
        </div>
    </div>

</div>