@model RepairActivityTypeViewModel

@{
    ViewData["Title"] = "Home Page";
    var UserViewModel = "Admin";
}

<!-- admin nav bar -->
<partial name="_AdminNavBarPartial" model="@UserViewModel" />

<div class="d-flex flex-column justify-content-start m-auto" style="height:80%; margin-top:100px;">

    <div class="p-2 bg-light text-center">
        <h2 class="display-4">Hello, Admin!</h2>
        <p class="lead mt-1">
            Manage <b>activity types</b>.
        </p>
    </div>

    <div class="d-flex flex-column justify-content-start fade-in" style="margin-top:100px;">
        <form asp-area="Admin" asp-controller="Home" asp-action="CreateActivityType" method="post" style="width:30%;" class="d-flex flex-column m-auto justify-content-center">
            <span asp-validation-for="@Model.Name" class="form-error" style="color: #7B0828"></span>
            <input asp-for="@Model.Name" class="log-in-form-control" type="text" placeholder="Activity type name" aria-label="Name">
            
            <div class="d-flex flex-row justify-content-end gap-3 mt-4">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" type="button" class="btn my-1 primary-button text-black btn-outline-light bg-secondary opacity-50 flex-shrink-1"
                   style="width: 8.0rem;">
                    <<<
                </a>
                <button type="submit" class="btn my-1 primary-button text-black btn-outline-light opacity-75 flex-grow-1">
                    Register
                </button>
            </div>
        </form>
    </div>
</div>