@model RegisterdVehicleInfoViewModel

@{
    var userName = ViewData["CurrentUser"];
}

<!-- customer index page -->
<div class="d-flex flex-column align-items-center" style="height:100%;">

    <!-- customer nav bar -->
    <partial name="_EmployeeNavBarPartial" model="@userName" area-name= />

    <!-- Brands and models dynamic container -->
    <div id="matchingNames" class="dynamicList "></div>

    <div class="d-flex flex-column mx-auto my-auto bg-light rounded-3" style="width:50%;">

        <div class="d-flex flex-row mt-2 align-content-center  align-items-center flex-row bg-light rounded-3">
            <h5 class="p-4 text-muted">
                VEHICLE REGISTERED
            </h5>
            <span class="mb-2 rounded-circle bg-success text-center text-light" style="width:24px; height:24px;">&#10003;</span>
        </div>

        <form class="d-flex flex-column gap-4 p-4" method="post" style="width:100%;">
            <div class="d-flex flex-column form-group gap-1">
                <label>Vehicle Brand</label>
                <input asp-for="@Model.RegisterBrand" type="text" class="form-control" autocomplete="off" placeholder="Enter brand" readonly>
            </div>
            <div class="d-flex flex-column form-group gap-1">
                <label>Vehicle Model</label>
                <input asp-for="@Model.RegisterModel" type="text" class="form-control" autocomplete="off" placeholder="Enter model" readonly>
            </div>
            <div class="d-flex flex-column form-group gap-1">
                <label>Production Year</label>
                <input asp-for="@Model.CreationYear" type="text" class="form-control" placeholder="Enter year" readonly>
            </div>
            <div class="d-flex flex-column form-group gap-1">
                <label>VIN Number</label>
                <input asp-for="@Model.VIN" type="text" class="form-control" placeholder="Enter vin" readonly>
            </div>
            <div class="d-flex flex-column form-group gap-1">
                <label>License Plate</label>
                <input asp-for="@Model.LicensePlate" type="text" class="form-control" placeholder="Enter license plate number" readonly>
            </div>
            <div class="d-flex flex-column form-group gap-1">
                <label>Customer email</label>
                <input asp-for="@Model.CustomerEmail" class="form-control" aria-describedby="emailHelp" placeholder="Link to customer" readonly>
            </div>
            <div class="d-flex justify-content-start gap-3 mt-4">
                <a asp-area="Employee" asp-controller="Home" asp-action="Index" class="btn btn-primary ">OK</a>
            </div>
        </form>
    </div>
</div>