@model List<UserViewModel>

@{
    var userName = ViewData["CurrentUser"];
}

<!-- employee index page -->
<div class="d-flex flex-column justify-content-start" style="height:calc(100% - 180px);">

    <!-- employee nav bar -->
    <partial name="_EmployeeNavBarPartial" model="@userName" />

    <div class="d-flex flex-column justify-items-between justify-content-end bg-light py-2">
        <div class="d-flex container justify-content-between">

            <div class="d-flex flex-row align-items-center gap-3">
                <a asp-area="Employee" asp-controller="Home" asp-action="Index" class="btn btn-secondary rounded-pill">
                    BACK
                </a>
                <p class="lead my-2">
                    MANAGE <b>CUSTOMERS</b>
                </p>
            </div>
        </div>
    </div>

    <div class="d-flex container my-2 px-4" style="max-height: 100%;">

        <!-- Make this div scrollable without affecting the main layout -->
        <div class="d-flex container flex-column gap-2 px-0 py-2 my-2" style="overflow-y: auto; ">
            @{
                foreach (var item in Model)
                {
                    <div class="d-flex flex-fill">
                        <partial name="/Views/Shared/Customer/_CustomerElementPartial.cshtml" model="@item" />
                    </div>
                }
            }
        </div>

    </div>

</div>
