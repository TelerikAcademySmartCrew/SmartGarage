@model VehicleViewModel

<div class="d-flex flex-column flex-fill bg-light bg-opacity-50 shadow m-auto p-3 gap-2 rounded" style="text-decoration:none; color:black">

    <div class="d-flex flex-column mx-2 justify-content-between gap-3">

        <div class="d-flex justify-content-between">
            <dv class="d-flex">
                <b>(@Model.CreationYear) @Model.Brand @Model.Model</b>
            </dv>
            <div class="d-flex">
                @Model.VIN : <b>VIN</b>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <div class="d-flex">
                @Model.Username
            </div>
            <div class="d-flex">
                @Model.LicensePlate : <b>LPN</b>
            </div>
        </div>

    </div>

    <a asp-controller="Visits" asp-action="CreateVisitByVin" asp-route-vin="@Model.VIN" class="d-flex flex-row align-self-end align-items-end btn btn-primary ms-auto">
        Create Visit
    </a>
</div>
