@model VehicleViewModel

@{

}

<div class="d-flex flex-column flex-fill bg-light bg-opacity-50 shadow m-auto p-3 rounded" style="text-decoration:none; color:black">

    <div class="d-flex flex-column mx-2 justify-content-between gap-3">

        <div class="d-flex justify-content-between">
            <dv class="d-flex">
                <b>(@Model.CreationYear) @Model.Brand @Model.Model</b>
            </dv>
            <div class="d-flex">
                @Model.VIN : <b>VIN</b>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <div class="d-flex">
                @Model.Username
            </div>
            <div class="d-flex">
                @Model.LicensePlate : <b>LPN</b>
            </div>
        </div>

    </div>
</div>
