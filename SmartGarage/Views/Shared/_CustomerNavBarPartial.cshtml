@model string

@{
    var userNameSplit = Model.Split("@");
    var userName = userNameSplit[0];
}

<!-- customer nav partial view -->
<div class="align-items-center rounded-3" style="background-color:#3094CC; height:50px; width:100%;">

    <div class="container">

        <div class="d-flex flex-row justify-content-between">

            <div>
                <div id="smart-garage-watermark">SMART GARAGE</div>
            </div>

            <div class="d-flex flex-row justify-content-around gap-4 align-items-center">
                <a asp-controller="Visits" asp-action="DisplayAll" class="customer-nav-bar-link">MY VISITS</a>
                <a asp-controller="Customer" asp-action="SmartGarageInfo" class="customer-nav-bar-link">SMART GARAGE</a>
                <a asp-controller="Enquiries" asp-action="PostEnquiry" class="customer-nav-bar-link">MAKE AN ENQUIRY</a>

                <div class="dropdown">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                        @userName
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <li><a asp-controller="Customer" asp-action="Profile" class="dropdown-item">Profile</a></li>
                        <li><a asp-controller="Auth" asp-action="Logout" id="dropdownLogout" name="Logout" class="dropdown-item">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>